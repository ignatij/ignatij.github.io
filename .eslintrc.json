{
  "root": true,
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:solid/recommended"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "plugins": ["solid"],
  "rules": {
    "solid/reactivity": "warn",
    "solid/no-destructure": "warn",
    "solid/jsx-no-undef": "error",
    "solid/no-innerhtml": "warn",
    "solid/prefer-for": "warn"
  },
  "settings": {
    "solid": {
      "typescript": false
    }
  },
  "ignorePatterns": ["dist/**/*", "node_modules/**/*"]
} 